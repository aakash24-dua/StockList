<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewStyleBottomDialog" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="TextViewStyleHeading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>

    </style>





    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
